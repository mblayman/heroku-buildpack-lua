#!/bin/bash

set -euo pipefail

# https://devcenter.heroku.com/articles/buildpack-api#bin-compile

# BUILD_DIR=$1
# CACHE_DIR=$2
# ENV_DIR=$3

function step {
    echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

step "Update apt"
apt-get update | indent

step "Install Lua"
# TODO: Actually install LuaRocks
apt-get -y install lua5.3

exit 0
